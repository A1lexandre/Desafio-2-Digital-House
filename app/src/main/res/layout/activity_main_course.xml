<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainCourseActivity">

    <ImageView
        android:id="@+id/ivMainCourseDetail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMainCourseDescription"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/ibBackButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvMainCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DefaultName"
        app:layout_constraintBottom_toBottomOf="@id/ivMainCourseDetail"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Roma's" />

    <TextView
        android:id="@+id/tvMainCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/mainCourseDescription"
        app:layout_constraintTop_toBottomOf="@id/ivMainCourseDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>