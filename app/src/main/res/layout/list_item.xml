<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/defaultCardView"
    tools:showIn="@layout/activity_restaurant_list"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRestaurant"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Tony Roma's"
                style="@style/DefaultCardTitle"
                />

            <TextView
                android:id="@+id/cdAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SupportTextDefault"
                tools:text="Av. Lavandisca, 717 - Indianópolis, São Paulo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha às "
                    android:textSize="14dp"
                    style="@style/SupportTextDefault"
                    />

                <TextView
                    android:id="@+id/tvCloseHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="22 "/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

